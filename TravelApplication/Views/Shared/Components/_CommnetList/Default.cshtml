@model List<Comment>
<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar (2)</h4>
    @foreach (var item in Model)
    {
        <div class="media mt-4">
            <div class="img-circle">
                <img src="https://st3.depositphotos.com/6672868/14217/v/450/depositphotos_142179970-stock-illustration-user-profile-icon.jpg" class="img-fluid" alt="...">
            </div>
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#URL" class="name mt-0 mb-2 d-block">@item.CommentUSer</a>
                        @item.CommentDate

                    </li>
                    <li class="reply-last">
                        <a href="#reply" class="reply">
                            Yanıtla
                        </a>
                    </li>
                </ul>
                <p>
                    <b>@item.CommentHead</b>
                    @item.CommentContent
                </p>
            </div>
        </div>
    }


</div>